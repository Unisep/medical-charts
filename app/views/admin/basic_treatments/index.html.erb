    </tr>
    </thead>

    <tbody>
    <% @basic_treatments.each do |basic_treatment| %>
      <tr>
        <td><%= basic_treatment.description %></td>
        <td><%= to_icon(basic_treatment.common) %></td>

        <td class=""><%= link_to t('.edit'), edit_admin_basic_treatment_path(basic_treatment) %></td>
        <td><%= link_to t('.destroy'), admin_basic_treatment_path([:admin, basic_treatment]),
